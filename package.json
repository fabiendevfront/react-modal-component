{
  "name": "@fabiendev/react-modal-component",
  "description": "Modal component for React JS",
  "version": "0.0.5",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiendevfront/react-modal-component"
  },
  "keywords": [
    "modal",
    "custom",
    "accessibility",
    "dark-mode",
    "react",
    "dialog",
    "simple"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "build:react": "react-scripts build",
    "eject": "react-scripts eject",
    "sass": "sass src/styles/main.scss src/lib/css/main.css"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "prop-types": "^15.8.1",
    "sass": "^1.58.3",
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "babel-preset-react-app": "^10.0.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  }
}
